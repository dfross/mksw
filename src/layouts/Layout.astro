---
import '../styles/global.css'
import { ViewTransitions } from 'astro:transitions'
import { AstroFont } from 'astro-font'
import { BRAND_NAME, SITE_TITLE, SITE_DESCRIPTION } from '../constants'
import PostHog from '../components/PostHog.astro'
const { PAGE_TITLE = 'Home' } = Astro.props

interface Props {
	PAGE_TITLE: string
}
---

<!doctype html>
<html lang="en" class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" maximum-scale="1" />
		<meta name="description" content={SITE_DESCRIPTION} />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="manifest" href="/site.webmanifest" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<link rel="canonical" href="https://mksw.netlify.app/" />
		<PostHog />
		<AstroFont
			config={[
				{
					src: [],
					name: 'Lexand',
					googleFontsURL: 'https://fonts.googleapis.com/css2?family=Lexend:wght@100..900&display=swap',
					preload: true,
					display: 'swap',
					selector: 'body',
					fallback: 'sans-serif',
				},
			]}
		/>
		<title>{SITE_TITLE} - {PAGE_TITLE}</title>
		<ViewTransitions />
	</head>
	<body
		class="mx-auto flex h-full max-w-screen-lg flex-col bg-[linear-gradient(rgba(22,78,99,0.9),rgba(23,37,84,0.9)),url('/bg.webp')] p-6 text-white">
		<main class="flex h-full flex-grow flex-col justify-center">
			<slot />
		</main>
		<footer class="mx-auto w-3/4 space-y-4 text-balance pt-9 text-center text-sm tracking-wide text-blue-100" role="contentinfo">
			<p>&copy; 2024 {BRAND_NAME} All rights reserved. For June ♥️.</p>
		</footer>
	</body>
</html>
<script is:inline>
	// Keyboard navigation enhancement
	document.addEventListener('keydown', (e) => {
		if (e.key === 'Tab') {
			document.body.classList.add('user-is-tabbing')
		}
	})
	document.addEventListener('mousedown', () => {
		document.body.classList.remove('user-is-tabbing')
	})
</script>
